@model Tp_Freelance.Models.CustomersCat

@{
    ViewData["Title"] = "Edit Categorie Customer";
}

<h1>@ViewBag.Title</h1>
<div class="form">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="CatId" />
        <div class="form-group">
            <label asp-for="CatName"></label>
            <input asp-for="CatName" />
            <span asp-validation-for="CatName"></span>
        </div>
        <div class="form-group">
            <label asp-for="CatDescription"></label>
            <textarea cols="13" rows="5" asp-for="CatDescription"></textarea>
            <span asp-validation-for="CatDescription"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-simple" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>



