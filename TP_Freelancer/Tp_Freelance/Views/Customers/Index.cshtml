@model IEnumerable<Tp_Freelance.Models.Customer>

@{
    ViewData["Title"] = "Clients";
}

<h1 class="text-center">@ViewBag.Title</h1>

<p class="text-center">
    <a asp-action="Create">Create New Client</a>
    <a asp-controller="CustomerCats" asp-action="Create">Create New Team</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-times"></a>
            </td>
        </tr>
}
    </tbody>
</table>
