                    <li><a asp-controller="Quotes" asp-action="Index"><i class="fa btn-fa fa-calculator"></i>Devis & Factures</a></li>
                </ul>
            </nav>
        </header>
        <main role="main">
            @RenderBody()
        </main>
        <footer>
            <div class="links_info">
                <ul>
                    <li><a href="#">content</a></li>
                    <li><a href="#">content</a></li>
                    <li><a href="#">content</a></li>
