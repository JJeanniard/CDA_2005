{% extends('admin/base.html.twig') %}
{% block title %}{{ parent() }} Users{% endblock %}
{% block classBody %}class="body_grid"{% endblock %}
{% block sous_title %}Customer Managment{% endblock %}
{% block content %}
    <section class="content">
        <p>Here you can view the list of users, add, modify and delete them.</p>
        <h3>Add Customer</h3>
        <h3>Customers</h3>
        <table>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
            <tr>
                {% for user in users %}
                    <td>{{ user.client_lastname }}</td>
                    <td>{{ user.client_email }}</td>
                    <td></td>
                {% endfor %}
            </tr>
        </table>
    </section>
{% endblock %}